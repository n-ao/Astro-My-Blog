---
	import type { Post } from '@data/post';
	const post: Post = Astro.props.post
---

<div>
	<h3><a href={`${import.meta.env.BASE_URL}${post.slug}`}>{post.title}</a></h3>
	<p>{post.timestamp.slice(0,10)}: {post.preview}</p>
</div>

<style>
	h3 {
		font-size: 1.2rem;
	}

	p {
		font-size: 0.8rem;
		padding: 0.1rem;
	}
</style>